{
  "name": "spot-q-backend",
  "version": "1.0.0",
  "description": "SPOT-Q Backend API - Quality Control and Production Management System",
  "main": "server.js",
  "scripts": {
    "start": "node --no-deprecation server.js",
    "dev": "nodemon --exec \"node --no-deprecation\" server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-admin": "node --no-deprecation utils/createAdmin.js"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "controllers",
      "models",
      "routes",
      "middleware",
      "utils"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  },
  "keywords": [
    "express",
    "mongodb",
    "mongoose",
    "rest-api",
    "authentication",
    "jwt",
    "quality-control",
    "production-management"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongo": "^0.1.0",
    "mongoose": "^8.19.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
